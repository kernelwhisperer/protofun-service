{
  "host": "localhost",
  "port": 3030,
  "public": "./public/",

  "paginate": {
    "default": 100,
    "max": 1000
  },
  "postgresql": {
    "client": "pg",
    "connection": "postgres://your_username:your_password@localhost:5433/your_db_name"
  },
  "authentication": {
    "entity": "user",
    "service": "users",
    "secret": "Miau",
    "authStrategies": [
      "jwt",
      "local"
    ],
    "jwtOptions": {
      "header": {
        "typ": "access"
      },
      "audience": "https://protocol.fun",
      "algorithm": "HS256",
      "expiresIn": "30d"
    },
    "local": {
      "usernameField": "email",
      "passwordField": "password"
    },
    "oauth": {
      "google": {
        "key": "<Client ID>",
        "secret": "<Client secret>"
      },
      "twitter": {
        "key": "<Client ID>",
        "secret": "<Client secret>"
      }
    }
  }
}
